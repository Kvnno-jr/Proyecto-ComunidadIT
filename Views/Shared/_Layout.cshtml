<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Krofect</title>
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/jquery.mCustomScrollbar.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://kit.fontawesome.com/31054ef4c0.js" crossorigin="anonymous"></script>
    @RenderSection("Publis", required: false)
    
</head>
<body>
    <div class="container">
        <div class="col-15 justify-content-center">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <div class="wrapper">
        <nav id="IzqSidebar">
            <ul class="list-unstyled items">
                <li>
                    <a asp-action="Index">Inicio</a>
                </li>
                <li>
                    <a href="#">Notificaciones</a>
                </li>
                <li>
                    <form>
                        <div class="input-usuario">
                            <input type="text" class="form-control" placeholder="Search">
                        
                        </div>
                    </form>
                </li>
            </ul>
            <a asp-action="Perfil">
                <img src="~/img/default-avatar.png" class="perfil-cIzq" alt="Perfil">
            </a>
        </nav>
            <nav id="DerSidebar">
            <ul class="list-unstyled items">
            </ul>
        </nav>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.mCustomScrollbar.concat.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
