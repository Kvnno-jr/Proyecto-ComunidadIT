@model Publicaciones.Models.MainViewModel
@section Publis
{
    <link rel="stylesheet" href="~/css/publi.css" />
}
<div class="col-12">
    <form method="post" asp-action="CrearPubli">
        <textarea name="texto" placeholder="Escribir publicación..." required></textarea>
        <br>
        <input type="submit" class="btn btn-info" value="Publicar"/>
    </form>
</div>

<br>
<br>
<br>

<div class="col-12">
    @foreach (var item in Model.Publicacion)
    {
        <div class="card bg-info">
            <div class="row">


                <div class="col-2">
                    <a asp-action="Perfil">
                        <img src="~/img/default-avatar.png" class="perfil-Publi" alt="Perfil">
                    </a>
                </div>


                <div class="col">

                    <div class="card-header row">
                        <div class="col-4">
                            <a asp-action="Perfil">@item.UsuarioID</a>
                        </div>

                        <div class="col row fecha">
                            <p>@item.Fecha.ToShortTimeString()</p>
                            <p>-</p>
                            <p>@item.Fecha.ToLongDateString()</p>
                        </div>

                        <div class="col-2">
                            <div class="dropdown">
                                <button class="btn-sm" type="button" id="publi-menu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fas fa-ellipsis-h fa-lg"></i>
                                </button>
                                <div class="dropdown-menu" aria-labelledby="publi-menu">
                                    
                                    <form asp-action="BorrarPubli" asp-route-id="@item.PublicacionID">
                                        <input type="submit" value="Borrar" class="dropdown-item"/>
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card-body">
                        <p class="card-text">@item.Texto</p>
                    </div>

                    <div class="card-footer">
                        <div class="row publi-func">

                            <div class="col">
                                <form asp-action="Like" asp-route-id="@item.PublicacionID">
                                    <input type="hidden" name="tipo" value="publi">
                                    <button type="submit">
                                        <i class="far fa-heart"></i>
                                    </button>
                                </form>
                            </div>

                            <div class="col">
                                <form asp-action="Publicacion" asp-route-id="@item.PublicacionID">
                                    <button type="submit">
                                        <i class="fas fa-comment-dots fa-lg"></i>
                                    </button>
                                </form>
                            </div>

                            <div class="col">
                                <a asp-action="Perfil">
                                    <i class="fas fa-share-alt fa-lg"></i>
                                </a>
                            </div>

                        </div>
                    </div>


                </div>


            </div>
        </div>
        <br>
    }
</div>